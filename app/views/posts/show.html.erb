<p>
  <strong><%= "#{current_user.name}'s post!" %></strong>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<% if @post.image.url.present? %>
  <p>
    <strong>image:</strong>
    <%= image_tag @post.image.url %>
  </p>
<% end %>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
